{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Appwave",
  "identifier": "ai.appwave.desktop",
  "version": "0.1.0",
  "build": {
    "beforeBuildCommand": "pnpm --dir ../frontend build",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../frontend/dist": "frontend"
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "cli": {
      "description": "Appwave CLI",
      "args": [
        {
          "name": "port",
          "description": "Port to run the server on",
          "short": "p",
          "takesValue": true
        },
        {
          "name": "debug",
          "description": "Enable debug logging",
          "short": "d",
          "takesValue": false
        }
      ]
    }
  }
}
