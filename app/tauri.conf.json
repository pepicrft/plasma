{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Plasma",
  "identifier": "dev.plasma.desktop",
  "version": "0.1.0",
  "build": {
    "beforeBuildCommand": "",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../frontend/dist": "frontend"
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "infoPlist": "Info.plist"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/pepicrft/plasma/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDAyNzM3N0VFRkZCQjBGNzgKUldSNEQ3di83bmR6QXYvNFZtd0wwUGpOK2JCeUFxall3bzY5ZFFhSUlTenJIR3VvdGVOMy94Tk0K",
      "windows": {
        "installMode": "passive"
      }
    },
    "cli": {
      "description": "Plasma - AI-powered app development",
      "subcommands": {
        "serve": {
          "description": "Run headless server without GUI",
          "args": [
            {
              "name": "port",
              "description": "Port to run the server on",
              "short": "p",
              "takesValue": true
            },
            {
              "name": "frontend",
              "description": "Path to frontend directory",
              "short": "f",
              "takesValue": true
            }
          ]
        }
      },
      "args": [
        {
          "name": "debug",
          "description": "Enable debug logging",
          "short": "d",
          "takesValue": false
        }
      ]
    }
  }
}
