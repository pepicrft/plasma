#!/usr/bin/env bash
#MISE description="Run the Tauri app (use --headless for server-only mode)"
#MISE flag "--headless" help="Run in headless mode without GUI"
set -e

if [ "${MISE_TASK_FLAG_HEADLESS:-}" = "true" ]; then
  concurrently -n backend,frontend -c blue,green \
    "cargo run -p app -- serve" \
    "pnpm --dir frontend dev"
else
  cd app && cargo tauri dev
fi
